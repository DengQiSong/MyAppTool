<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="12dp">


    <com.hyh.www.common.widget.CircularImageView
        android:id="@+id/circular"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY" />


    <com.hyh.www.common.widget.myview.PeopleView
        android:id="@+id/peopleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#222"
        android:textSize="16sp"
        app:adult="true"
        app:age="600"
        app:birthplace="@string/birthplace"
        app:careers="@string/careers"
        app:high="192"
        app:name="@string/name"
        app:nationality="@string/nationality"
        app:obese="mid"
        app:sex="@string/sex"
        app:weight="200" />

    <com.hyh.www.common.widget.myview.RoundProgress
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:current="1234"
        app:max="3600" />
</LinearLayout>